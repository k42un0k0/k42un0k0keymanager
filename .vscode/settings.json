{
  "files.exclude": {
    "front/amplify/.config": true,
    "front/amplify/**/*-parameters.json": true,
    "front/amplify/**/amplify.state": true,
    "front/amplify/**/transform.conf.json": true,
    "front/amplify/#current-cloud-backend": true,
    "front/amplify/backend/amplify-meta.json": true,
    "front/amplify/backend/awscloudformation": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true // ESLint を実行
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "eslint.workingDirectories": ["./front", "./lib", "./app"],
  "typescript.preferences.importModuleSpecifier": "non-relative"
}
