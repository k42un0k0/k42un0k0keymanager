{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "run-p build:lib start:*",
    "start:front": "lerna run start --scope front --stream",
    "start:app": "lerna run dev --scope app --stream",
    "build:front": "lerna run build --scope front",
    "build:lib": "lerna run compile --scope lib",
    "build:app": "lerna run compile:prod --scope app",
    "test:front": "lerna run test --scope front",
    "test:app": "lerna run test --scope app",
    "cp-front-to-app": "cpx ./front/dist/front/**/* ./app/dist/front",
    "package": "run-p build:* && npm run-script cp-front-to-app && lerna run dist --scope app"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5"
  }
}
