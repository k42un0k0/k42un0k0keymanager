{
  "name": "k42un0k0passwordmanager",
  "version": "0.0.6",
  "main": "./dist/app/main.js",
  "scripts": {
    "dev": "run-p watch start",
    "start": "cross-env ELECTRON_START_URL=\"http://localhost:4200\" electron --inspect=5858 .",
    "build": "cpx src/splash.html dist/app && tsc",
    "build:prod": "cpx src/splash.html ./dist/app && tsc -p tsconfig.prod.json",
    "watch": "yarn build --watch",
    "test": "jest",
    "lint": "eslint .",
    "tsc": "tsc --noEmit",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "private": true,
  "build": {
    "appId": "com.electron.k42un0k0passwordmanager",
    "mac": {
      "category": "your.app.category.type"
    },
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "buildResources": "./dist",
      "output": "../build"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "jsdom": "^16.5.3",
    "keytar": "^7.7.0",
    "lib": "^0.0.6"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^26.0.23",
    "@types/jsdom": "^16.2.10",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "chokidar": "^3.5.1",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^26.5.5",
    "typescript": "~4.1.5"
  }
}
